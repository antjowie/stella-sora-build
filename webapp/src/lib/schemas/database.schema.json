{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "NotesCollection": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": [
        "id",
        "values"
      ],
      "additionalProperties": false
    },
    "ParamCollection": {
      "type": "object",
      "properties": {
        "idx": {
          "type": "number"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "idx",
        "values"
      ],
      "additionalProperties": false
    },
    "DiscSkill": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "params": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ParamCollection"
          }
        },
        "notes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NotesCollection"
          }
        }
      },
      "required": [
        "name",
        "desc",
        "params",
        "notes"
      ],
      "additionalProperties": false
    },
    "Rarity": {
      "type": "number",
      "enum": [
        1,
        2,
        3
      ]
    },
    "CharacterClass": {
      "type": "number",
      "enum": [
        1,
        2,
        3
      ]
    },
    "Element": {
      "type": "number",
      "enum": [
        1,
        2,
        3,
        4,
        5,
        6,
        7
      ]
    },
    "PotentialRarity": {
      "type": "number",
      "enum": [
        1,
        2,
        3
      ]
    },
    "Database": {
      "type": "object",
      "properties": {
        "characters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Character"
          }
        },
        "discs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Disc"
          }
        },
        "potentialIcons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "loading": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "characters",
        "discs",
        "potentialIcons",
        "loading"
      ],
      "additionalProperties": false
    },
    "Character": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "class": {
          "$ref": "#/definitions/CharacterClass"
        },
        "element": {
          "$ref": "#/definitions/Element"
        },
        "rarity": {
          "$ref": "#/definitions/Rarity"
        },
        "mainBuild1Name": {
          "type": "string"
        },
        "mainBuild1Desc": {
          "type": "string"
        },
        "mainBuild2Name": {
          "type": "string"
        },
        "mainBuild2Desc": {
          "type": "string"
        },
        "supportBuild1Name": {
          "type": "string"
        },
        "supportBuild1Desc": {
          "type": "string"
        },
        "supportBuild2Name": {
          "type": "string"
        },
        "supportBuild2Desc": {
          "type": "string"
        },
        "potentials": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Potential"
          }
        }
      },
      "required": [
        "id",
        "name",
        "class",
        "element",
        "rarity",
        "mainBuild1Name",
        "mainBuild1Desc",
        "mainBuild2Name",
        "mainBuild2Desc",
        "supportBuild1Name",
        "supportBuild1Desc",
        "supportBuild2Name",
        "supportBuild2Desc",
        "potentials"
      ],
      "additionalProperties": false
    },
    "Potential": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "descShort": {
          "type": "string"
        },
        "descLong": {
          "type": "string"
        },
        "icons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rarity": {
          "$ref": "#/definitions/PotentialRarity"
        },
        "build": {
          "type": "number"
        },
        "type": {
          "type": "number"
        },
        "params": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ParamCollection"
          }
        }
      },
      "required": [
        "id",
        "name",
        "descShort",
        "descLong",
        "icons",
        "rarity",
        "build",
        "type",
        "params"
      ],
      "additionalProperties": false
    },
    "Disc": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "element": {
          "type": "number"
        },
        "rarity": {
          "type": "number"
        },
        "skills": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DiscSkill"
          }
        },
        "bg": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name",
        "desc",
        "element",
        "rarity",
        "skills",
        "bg"
      ],
      "additionalProperties": false
    }
  }
}